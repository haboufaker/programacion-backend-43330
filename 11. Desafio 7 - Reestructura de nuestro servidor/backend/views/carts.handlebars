<!-- carts.handlebars -->
<!DOCTYPE html>
<html>
<head>
  <title>Cart</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Cart</h1>
  {{#if cart.products.length}}
    <table class="table">
		<thead>
			<tr>
			<th>Product</th>
			<th>Quantity</th>
			<th>Title</th>
			<th>Description</th>
			<th>Price</th>
			<th>Code</th>
			<th>Stock</th>
			<th>Thumbnail</th>
			</tr>
		</thead>
		<tbody>
			{{#each cart.products}}
			<tr>
			<td>{{this.product._id}}</td>
			<td>{{this.quantity}}</td>
			<td>{{this.product.title}}</td>
			<td>{{this.product.description}}</td>
			<td>{{this.product.price}}</td>
			<td>{{this.product.code}}</td>
			<td>{{this.product.stock}}</td>
			<td>
				{{#each this.product.thumbnail}}
				<img src="{{this}}" alt="Thumbnail" class="thumbnail-image">
				{{/each}}
			</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
  {{else}}
    <p>No products in the cart.</p>
  {{/if}}
</body>
</html>